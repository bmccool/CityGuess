<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mccool.brendon.cityguess.NewGameActivity"
    tools:showIn="@layout/activity_new_game">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:onClick="continueGame" />

    <TextView
        android:text="Higher difficulty means the answer can include smaller cities."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <SeekBar android:id="@+id/difficulty_slider"
        android:progress="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
